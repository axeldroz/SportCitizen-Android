<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cellFeedCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="@dimen/com_facebook_likeboxcountview_text_padding"
    android:paddingStart="@dimen/fui_heading_padding_bottom"
    android:paddingTop="@dimen/com_facebook_likeboxcountview_caret_width"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="25dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cell_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:text="Challenge"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="219dp" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cell_image_feed"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/cell_text_description"
                android:layout_width="0dp"
                android:layout_height="54dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Notification"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cell_image_feed"
                app:layout_constraintTop_toTopOf="@+id/cell_image_feed" />

            <TextView
                android:id="@+id/cell_feed_text_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="Bordeaux"
                app:layout_constraintStart_toEndOf="@+id/cell_image_feed"
                app:layout_constraintTop_toBottomOf="@+id/cell_text_description" />

            <TextView
                android:id="@+id/cell_feed_text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Friday"
                app:layout_constraintEnd_toStartOf="@+id/cell_feed_text_time"
                app:layout_constraintStart_toEndOf="@+id/cell_feed_text_location"
                app:layout_constraintTop_toBottomOf="@+id/cell_text_description" />

            <TextView
                android:id="@+id/cell_feed_text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="6:00pm"
                app:layout_constraintEnd_toEndOf="@+id/cell_text_description"
                app:layout_constraintTop_toBottomOf="@+id/cell_text_description" />
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>