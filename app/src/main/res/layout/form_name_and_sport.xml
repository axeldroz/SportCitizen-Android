<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/create_challenge_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Challenge Name"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/create_challenge_name_edit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:inputType="textShortMessage"
        app:layout_constraintTop_toBottomOf="@+id/create_challenge_name_label" />

    <TextView
        android:id="@+id/create_challenge_sport_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:text="Sport"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/create_challenge_name_edit" />

    <Spinner
        android:id="@+id/create_challenge_sport_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/create_challenge_sport_label" />

</android.support.constraint.ConstraintLayout>